            android:maxLines="1"
            android:paddingStart="@dimen/spacing_huge"
            android:paddingTop="@dimen/spacing_normal"
            android:paddingEnd="@dimen/spacing_huge"
            android:paddingBottom="@dimen/spacing_normal"
            android:textColorHint="@color/light_gray"
