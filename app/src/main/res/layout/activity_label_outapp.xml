<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.nexters.fullstack.viewmodel.LabelOutAppViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/depth3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/white">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/do_labelling"
                android:textSize="@dimen/b1"
                android:textColor="@color/text_white">
            </TextView>

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:text="@string/done"
                android:textSize="@dimen/b1"
                android:textColor="@color/key_active"
                >
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/motion_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/container_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutDescription="@xml/motion_collapsing_toolbar"
            app:showPaths="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_screenshot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/container_input_search"
                android:padding="@dimen/spacing_20">

                <ImageView
                    android:id="@+id/iv_screenshot"
                    android:layout_width="@dimen/ss_small_width"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                </ImageView>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_input_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_search_height"
                app:layout_constraintTop_toBottomOf="@id/container_screenshot"
                app:layout_constraintBottom_toTopOf="@id/rv_label"
                android:layout_marginLeft="@dimen/spacing_20"
                android:layout_marginRight="@dimen/spacing_20"
                android:background="@drawable/bg_search_bar"
                android:paddingLeft="@dimen/spacing_10"
                android:paddingRight="@dimen/spacing_10"
                >

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="@dimen/icon_mini"
                    android:layout_height="@dimen/icon_mini"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/white">

                </ImageView>

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_search"
                    app:layout_constraintRight_toLeftOf="@id/iv_et_clear"
                    android:layout_marginLeft="@dimen/spacing_10"
                    android:layout_marginRight="@dimen/spacing_10"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/inactive3"
                    android:hint="@string/placeholder_label_search"
                    android:textSize="@dimen/b1">

                </EditText>
                
                <ImageView
                    android:id="@+id/iv_et_clear"
                    android:layout_width="@dimen/icon_mini"
                    android:layout_height="@dimen/icon_mini"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@color/white">

                </ImageView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/container_input_search"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/spacing_20"
                >

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.motion.widget.MotionLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/depth4"
            android:padding="@dimen/spacing_20">

            <TextView
                android:id="@+id/tv_selected_label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/b2"
                android:textColor="@color/secondary"
                android:text="@string/selected_label"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tv_selected_label_title"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/spacing_small"
                android:textSize="@dimen/b2"
                android:textColor="@color/key_active">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_selected_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_selected_label_title"
                android:layout_marginTop="@dimen/spacing_small"
                >

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>